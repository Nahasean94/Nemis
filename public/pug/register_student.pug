doctype html
html
    head
        title Nemis Imeweza
    body
        //TODO automatically fetch the school id
        form(action="/register_student" method="post")
            label(for="upi") School UPI
            input(type="text" name="upi" id="upi" required="true")
            label(for="surname") Surname
            input(type="text" name="surname" id="surname" required="true")
            label(for="first_name") First name
            input(type="text" name="first_name" id="first_name" required="true")
            label(for="second_name") Second name
            input(type="text" name="second_name" id="second_name")
            label(for="dob") Date of birth
            input(type="date" name="dob" id="dob" required="true")
            label(for="male") Male
            input(type="radio" name="gender" id="male" value="male")
            label(for="female") Female
            input(type="radio" name="gender"  id="female" value="female")
            input(type="submit" name="submit" value="Submit")